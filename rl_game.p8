--updates
function update_game()
	for i=0,3 do
		if btnp(i) then
			moveplayer(dirx[i+1],diry[i+1])
			return
		end
	end
end

function update_pturn()
	p_t=min(p_t+0.15,1)

	p_ox=p_sox*(1-p_t)
	p_oy=p_soy*(1-p_t)

	if p_t==1 then
		_upd=update_game
	end
end

